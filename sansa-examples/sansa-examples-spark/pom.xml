											<!-- <exclude>org.glassfish.jersey*</exclude> -->
											<exclude>org.javassist:javassist</exclude>
											<exclude>org.json4s:json4s*</exclude>
											<!-- <exclude>org.mortbay.jetty:jetty*</exclude> no longer used-->
